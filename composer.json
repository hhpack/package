{
  "name": "hhpack/package",
  "type": "library",
  "keywords": [ "hack", "hhvm", "package", "file collector" ],
  "description": "Package utility library for vendor",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.6.0"
  },
  "require-dev": {
    "expect/peridot-expect-plugin": "~3.0",
    "peridot-php/peridot": "~1.16",
    "peridot-php/peridot-dot-reporter": "~1.0",
    "hhpack/typesafety": "~0.2"
  },
  "autoload": {
    "psr-4": {
      "hhpack\\package\\": "src"
    },
    "files": [ "src/bootstrap.hh", "src/shortcut.hh" ]
  },
  "autoload-dev": {
    "psr-4": {
      "hhpack\\package\\spec\\fixtures\\": "spec/fixtures",
      "hhpack\\package\\examples\\classes\\": "example/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/peridot -c peridot.hh --grep *Spec.hh spec -r dot",
    "check:init": "touch .hhconfig",
    "check": "vendor/bin/typesafety"
  }
}
