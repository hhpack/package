{
  "name": "holyshared/package",
  "type": "library",
  "keywords": [ "hack", "hhvm", "package", "file collector" ],
  "description": "Source file collector for vendor package",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.6.0"
  },
  "require-dev": {
    "expect/peridot-expect-plugin": "~3.0",
    "peridot-php/peridot": "~1.15",
    "peridot-php/peridot-dot-reporter": "~1.0"
  },
  "autoload": {
    "psr-4": {
      "package\\": "src"
    },
    "files": [ "src/bootstrap.hh" ]
  },
  "autoload-dev": {
    "psr-4": {
      "package\\spec\\fixtures\\": "spec/fixtures",
      "package\\examples\\classes\\": "example/src"
    }
  },
  "scripts": {
    "test": "vendor/bin/peridot -c peridot.hh --grep *Spec.hh spec -r dot"
  }
}
