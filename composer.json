{
  "name": "hhpack/package",
  "type": "library",
  "keywords": [ "hack", "hhvm", "package", "file collector" ],
  "description": "Package utility library for vendor",
  "license": "MIT",
  "authors": [
    {
      "name": "Noritaka Horio",
      "email": "holy.shared.design@gmail.com"
    }
  ],
  "require": {
    "hhvm": ">=3.21.0",
    "facebook/definition-finder": "^1.6",
    "hhvm/hhvm-autoload": "^1.5"
  },
  "require-dev": {
    "hackpack/hackunit": "^1.1"
  },
  "autoload": {
    "psr-4": {
      "HHPack\\Package\\": "src"
    },
    "files": [ "src/shortcut.hh" ]
  },
  "autoload-dev": {
    "psr-4": {
      "HHPack\\Package\\Test\\Fixtures\\": "test/fixtures",
      "HHPack\\Package\\Test\\Mock\\": "test/mock",
      "HHPack\\Package\\Examples\\Classes\\": "example/src"
    }
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "scripts": {
    "test": "vendor/bin/hackunit test",
    "check:init": "touch .hhconfig",
    "check": "./hhtool check"
  }
}
